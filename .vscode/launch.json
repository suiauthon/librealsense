    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Linux64_x64/tools/realsense-viewer/realsense-viewer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [ 
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "/media/L/GenICam/V3_0_2/bin/Linux64_x64"
                },
                {
                    "name": "CAMERA_SUITE_GENICAM_ROOT_V3_0",
                    "value": "/media/L/GenICam/V3_0_2"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "build librs debug"
        }
    ]
}